  ],
  "main": "server/app.js",
  "files": [
    "client/build",
    "server/",
    "lib/"
  ],
  "dependencies": {
    "address": "^1.1.2",
    "boxen": "^4.1.0",
    "commander": "^3.0.2",
    "detect-port": "^1.3.0",
    "is-image": "^3.0.0",
    "koa": "^2.10.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "git-commit-msg-linter": "^2.3.9",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-images": "^1.0.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "prestart": "npm run build:client",
    "start": "node server/app.js",
