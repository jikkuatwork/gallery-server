{
  "name": "gallery-server",
  "version": "1.3.2",
  "description": "Beautiful and powerful yet simple local image viewer on your PC or mobile.",
  "keywords": [
    "beautiful",
    "pc",
    "mobile",
    "local",
    "image",
    "viewer",
    "gallery",
